 <!-- Секция контактов и формы -->
<section id="contacts" class="py-5" style="background-color: #121212; color: white;">
    <div class="container">
        <div class="row">
            <!-- Заголовок -->
            <div class="col-12 text-center mb-5">
                <h1 class="display-4">Связаться с нами</h1>
            </div>
            
            <!-- Контактная информация -->
            <div class="col-md-6 mb-5 mb-md-0">
                <div class="pe-md-5">
                    <h2 class="mb-4" style="font-size: 1.5rem; color: #e83e8c;">Контактная информация</h2>
                    <ul class="list-unstyled" style="font-size: 1.1rem; line-height: 2;">
                        <li>+7 (999) 123-45-67</li>
                        <li>info@hookah-luxury.ru</li>
                        <li>Саранск</li>
                        <li>Ежедневно с 10:00 до 4:00</li>
                    </ul>
                </div>
            </div>
            
            <!-- Форма заявки -->
            <div class="col-md-6">
                <div>
                    <h2 class="mb-3" style="font-size: 1.5rem; color: #e83e8c;">Заказать кейтринг</h2>
                    <p class="mb-4" style="color: #aaa;">Оставьте заявку и мы свяжемся с вами в течение часа</p>
                    
                    <form>
                        <!-- Поля формы с видимыми подсказками -->
                        <div class="mb-3 position-relative">
                            <label class="position-absolute" style="color: white; top: 12px; left: 12px; pointer-events: none;">Ваше имя</label>
